{
  "name": "vscode-nodejs-typescript-eslint-prettier-ava-boilerplate",
  "version": "1.0.0",
  "description": "A template for TypeScript-based Node.js projects with modern linting, formatting and testing for Visual Studio Code",
  "repository": {
    "url": "https://github.com/adrienjoly/vscode-nodejs-typescript-eslint-prettier-ava-boilerplate"
  },
  "main": "src/main.ts",
  "scripts": {
    "start": "ts-node src/main.ts",
    "test": "ava-ts"
  },
  "author": "Adrien Joly",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "ava": "^3.7.0",
    "ava-ts": "^0.25.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.4",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "singleQuote": true
  }
}
